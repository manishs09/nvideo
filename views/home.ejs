<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Video Server</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row py-4">        
      <% videos.forEach(function(video){ %>
          <div class="col-xs-12 col-md-4 col-sm-6 col-lg-4">
            <video id="videoPlayer" controls muted="muted" class="col-12" >
              <source src="/video/<%= video.id %>" type="video/mp4" autostart="false"/>
            </video>
            <span class="text-center d-block"><strong><%= video.name %></strong></span>
          </div>
      <% })%>
      </div>
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>